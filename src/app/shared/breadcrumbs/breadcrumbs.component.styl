.breadcrumbs
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 10px;
  font-size: 12px;

  &__link
    display: flex;
    align-items: center;


    mat-icon,
    a
      color: rgba(0, 0, 0, 0.38);

    a
      cursor: pointer;
      font-family: Roboto, "Helvetica Neue", sans-serif;
      text-decoration: none;
      font-weight: bold;