.sidenav

  &__version
    margin-top: auto;
    margin-left: 10px;
    font-weight: 100;
    font-size: 14px;
    color: #eee;

  &__content
    width: 100%

  &__link

    &-active
      background: rgba(255, 255, 255, 0.12);



.example-container
  display: flex;
//background: #edeef0;


.example-sidenav-content
  padding 20px
  width: 100%
  box-sizing: border-box

.mat-expansion-panel
  background: #616161
  &-header

    &-title
      color #eeeeee

    &-description
      flex-grow: 0
      margin-right: 0

      .mat-icon
        color: #eeeeee

.example-sidenav
  padding: 20px 0;
  display: flex;
  flex-direction: column;
  //box-shadow: 2px 0 12px 0 rgba(0,0,0,0.22);

  a
    display: block
    color #eeeeee
    margin 0 -21px 0 -21px
    text-align left

    &:last-child
      margin-bottom -16px

