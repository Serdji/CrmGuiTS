.mat-expansion-panel-header-description
  flex-grow: 1;
  &._data
    flex-grow: 0;

.messages

  &__title
    width: 645px;

  &__sort,
  &__filter
    display: flex;
    color: rgba(0, 0, 0, 0.54);
    font-size: 15px;
    font-weight: 400;

  &__sort
    border-radius: 0;
    box-shadow: 0 0 0 0 rgba(0,0,0,0.2), 0 0 2px 0 rgba(0,0,0,0.14), 0 0 0 0 rgba(0,0,0,0.12)

  &__filter
    flex-grow: 1;

    span
      display: flex;
      align-items: center;
      cursor: pointer;

    &._data
      flex-grow: 0;

  &__card
    max-width: 600px;
    margin: auto;
    padding: 15px 0;
    display: flex;
    flex-direction: column;

  &__title
    width: 300px;

  &__link
    margin: 0 auto;
    margin-top: 30px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    color: rgba(32, 112, 181, 0.54);
    cursor: pointer;