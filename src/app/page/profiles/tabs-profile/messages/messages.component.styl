minWidthTitle = 695px

.mat-expansion-panel-header
  padding: 0 16px;

.messages

  &__header

    &-wrapper
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      width: 100%;

  &__sort,
  &__filter
    display: flex;
    color: rgba(0, 0, 0, 0.54);
    font-size: 15px;
    font-weight: 400;

  &__sort
    justify-content: space-between;
    border-radius: 0;
    box-shadow: 0 0 0 0 rgba(0,0,0,0.2), 0 0 2px 0 rgba(0,0,0,0.14), 0 0 0 0 rgba(0,0,0,0.12)

  &__filter,
  &__title
    min-width: minWidthTitle;

    span
      display: flex;
      align-items: center;
      cursor: pointer;

    &:last-child
      min-width: 0;


  &__title
    margin-right: 0;

    &:last-child
      min-width: 0;
      margin-right: 75px;
      flex-grow: 0;

  &__card
    max-width: 600px;
    margin: auto;
    padding: 15px 0;
    display: flex;
    flex-direction: column;


  &__link
    margin: 0 auto;
    margin-top: 30px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    color: rgba(32, 112, 181, 0.54);