minWidthTitleAvailable = 432px
minWidthTitleUsed = 342px

.mat-expansion-panel-header
  padding: 0 16px;

.promo-code
  display: flex;

  &__menu
    border-right: 0;
    padding: 0;
    margin-right: 2px;

    &-button
      width: 100%;
      padding: 5px 0;
      box-sizing: border-box;
      border-radius: 0;
      border-bottom: 2px solid #ffd74000;

      &._active
        border-bottom: 2px solid #ffd740;

  &__accordion
    flex: 1;

    &._used
      .promo-code__filter,
      .promo-code__title
        min-width: minWidthTitleUsed;
        &:last-child
          min-width: 0;

      .promo-code__title
        &:last-child
          margin-right: 26px;


  &__progress-bar
    width: 100%;

  &__header

    &-wrapper
      display: flex;
      flex-direction: row;
      width: 100%;

  &__sort,
  &__filter
    display: flex;
    color: rgba(0, 0, 0, 0.54);
    font-size: 15px;
    font-weight: 400;

  &__sort
    border-radius: 0;
    box-shadow: 0 0 0 0 rgba(0,0,0,0.2), 0 2px 0 0 rgba(0,0,0,0.05), 0 0 0 0 rgba(0,0,0,0.12)

  &__filter
  &__title
    min-width: minWidthTitleAvailable;
    margin-left: auto;

    span
      display: flex;
      align-items: center;
      cursor: pointer;

    &:last-child
      min-width: 0;

  &__title
    margin-right: 0;

    &:last-child
      min-width: 0;
      margin-right: 95px;
      flex-grow: 0;

      span
        width: 75px;

  &__card
    margin: auto;
    padding: 15px 0;
    display: flex;
    flex-direction: column;

  &__link
    margin: 0 auto;
    margin-top: 30px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    color: rgba(32, 112, 181, 0.54);
    cursor: pointer;

  &__box
    display: flex;
    flex-direction: row;
    position: relative

  &__info
    display: flex;
    flex-direction: column;
    background: #f0f9ff;
    border: 1px solid #dedede;
    flex: 1
    padding: 15px 10px;
    margin: 0 5px;
    font-size: 12px;

    &-wrapper
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
      padding-bottom: 5px;
      border-bottom: 1px solid #dedede;

      &:last-child
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none

    &-text
      color: #b5b5b5;

    &-params
      display: flex;
      flex-direction: column;
      justify-content: right;

      span
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 250px;
        text-align: right;

    &-direction
      display: flex;
      justify-content: space-between;
      align-items: center;

    &-location
      width: 25px;
      text-align: center;