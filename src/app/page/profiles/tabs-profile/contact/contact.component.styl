.contact

  &__form
    display: flex;
    justify-content: space-around;
    align-items: center;

  &__input
    width: 30%;

  &__button
    height: 36px;


  &__show
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;

    span
      margin-left: auto;
      margin-right: 10px;
      cursor: pointer;
      font-weight: bold;
      color: #424242;
      font-size: 14px;

    mat-icon
      width: 34px;
      height: 34px;
      font-size: 34px;
      cursor: pointer;
      color: #696969;