.profile-search
  margin-top: -5px;

  &__card
    height: 100%;
    margin: 0 5px

    &._pos-bottom
      bottom: auto


  &__content
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;

    &._input-row
      flex-direction: row;
      align-items: center;

      .profile-search__input
        width: 40%;

  &__input
    width: 100%

  &__button

    &._left-button
      margin-right: 15px;

    &-wrapper
      position: absolute;
      bottom: -43px;
      right: 15px;
      left: 15px;
      text-align right;

    &-spinner
      position: absolute;
      top: 50%;
      left: 50%;
      margin-top: -15px;
      margin-left: -8px;

  &__table
   margin-top: 50px;
   padding: 5px

  .row
    height: 100%
  ._mb
    margin-bottom: 10px;
