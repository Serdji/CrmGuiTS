.complex-segmentation

  &__wrapper
    display: flex;
    flex-direction: row;

  &__form
    flex: 1;
    margin-right: 10px;

  &__table-complex-segmentation
    flex: 2;
    margin-bottom: 10px;

  &__card
    margin-bottom: 10px;

  &__content
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;

  &__input
    width: 100%

  &__content
    &-wrapper
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;

      span
        padding 10px 0;
        color: #424242;
        font-family: Roboto, "Helvetica Neue", sans-serif;

      mat-icon
        color: #696969;
        cursor: pointer;

  &__button

    margin-right: 15px;

    &-wrapper
      text-align right;
      margin-bottom: 20px;