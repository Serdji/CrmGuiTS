.complex-segmentation

  &__card
    margin-bottom: 10px;

  &__content
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;

  &__input
    width: 100%

  &__wrapper
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    h3
      color: #424242;
      font-family: Roboto, "Helvetica Neue", sans-serif;

    mat-icon
      color: #696969;
      cursor: pointer;

  &__button

    margin-right: 15px;

    &-wrapper
      text-align right;
      margin-bottom: 20px;