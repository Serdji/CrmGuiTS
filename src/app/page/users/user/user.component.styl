.user
  margin: 20px;

  &__card
    position: absolute;
    top: 15px;
    left: 15px;
    right: 15px;
    bottom: 15px;

  &__header,
  &__list,
  &__label
    color: #424242

  &__list,
  &__label
    font-size: 16px;
    margin-bottom: 50px

  &__label
    &-title
      margin-bottom: 20px;

  &__content
    margin-top: 50px;

  &__checkbox
    margin-right: 20px;

  &__spinner
    position: absolute;
    left: calc(50% - 50px);
    top: calc(50% - 50px);

  &__form
    margin-top: 20px
    height: 390px;
    display: flex;
    flex-direction: column;


  &__input
    display: block

  &__button

    &._left-button
      margin-left: auto
      margin-right: 5px

    &-wrapper
      margin-top: auto;
      display: flex

.mat-card-header
  align-items: center;

  .mat-icon
    margin-left: auto
    cursor: pointer;
    color: #696969;