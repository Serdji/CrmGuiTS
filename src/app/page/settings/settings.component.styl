.setting
  margin: 20px;

  &__header,
  &__list,
  &__label
    color: #424242

  &__list,
  &__label
    font-size: 16px;
    margin-bottom: 50px

  &__label
    &-title
      margin-bottom: 20px;

  &__content
    width: 100%;
    margin-bottom: auto;

  &__container
    padding-top: 0;

    .setting__item-wrapper
      position: static;
      margin-top: 0

  &__checkbox
    margin-right: 20px;
    margin-bottom: 20px;

  &__spinner
    position: absolute;
    left: calc(50% - 50px);
    top: calc(50% - 50px);

  &__form
    padding-left: 20px
    margin-top: 20px
    display: flex;
    flex-direction: column;


  &__input
    display: block;

  &__item
    cursor: pointer;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid rgba(0, 0, 0, 0.12);

    .mat-icon
      margin-left: auto
      cursor: pointer;
      color: #696969;

    &-wrapper
      width: 100%;
      display: flex;
      flex-direction: row;
      align-items: center;
      position: absolute;
      top: 50%;
      margin-top: -12px

      .mat-icon
        margin-left: auto
        cursor: pointer;
        color: #696969;


.gu-mirror
  border-top: 1px solid rgba(0, 0, 0, 0.12);


figure
  align-items: start;
