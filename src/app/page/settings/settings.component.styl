.setting
  margin: 20px;

  &__header,
  &__list,
  &__label
    color: #424242

  &__list,
  &__label
    font-size: 16px;
    margin-bottom: 50px

  &__label
    &-title
      margin-bottom: 20px;

  &__content
    width: 100%

  &__checkbox
    margin-right: 20px;
    margin-bottom: 20px;

  &__spinner
    position: absolute;
    left: calc(50% - 50px);
    top: calc(50% - 50px);

  &__form
    padding-left: 20px
    margin-top: 20px
    display: flex;
    flex-direction: column;


  &__input
    display: block
