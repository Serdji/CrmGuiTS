.age-interval

  &__form
    display: flex;
    flex-direction: row;

  &__box
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;

  &__input
    flex: 1;
    width: 100%;
    margin-right: 20px;

  &__button-add
    height: 40px;

  &__row

    &-item
      align-items: center;
      display: flex;
      flex-direction: row;
      border-bottom: 1px solid rgba(0, 0, 0, 0.12);

      span
        padding: 10px 0
        flex: 1;

    &-menu
      cursor: pointer;
      color: #696969;
      margin-left: auto;

      mat-icon
        &:nth-child( 1 )
         margin-right: 10px;
