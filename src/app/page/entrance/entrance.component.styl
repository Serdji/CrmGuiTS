sizeIcon = 120px;

.entrance

  &__card
    position: absolute;
    top: 15px;
    left: 15px;
    right: 15px;
    bottom: 15px;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    &:hover
      box-shadow 0px 5px 5px -3px rgba(0, 0, 0, 0.2), 0px 8px 10px 1px rgba(0, 0, 0, 0.14), 0px 3px 14px 2px rgba(0, 0, 0, 0.12);

  &__title
    text-align: center
    color: #9e9e9e;

  &__icon
    font-size: sizeIcon;
    width: sizeIcon;
    height: sizeIcon;
    color: #9E9E9E;
    margin: auto;

  &__actions
    display: flex;
    height: 100%;

  &__button
    width: 100%;
