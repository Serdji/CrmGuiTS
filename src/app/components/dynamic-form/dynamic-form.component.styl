.dynamic-form

  margin-top: 15px;

  &__form
    margin-bottom: 15px;

  &__input
    width: 100%;

  &__radio
    margin-right: 20px;

  ::ng-deep
    .mat-figure
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      padding: 20px;
      box-sizing: border-box;
      border 1px solid rgba(0, 0, 0, 0.12);

    .mat-figure > .ng-star-inserted
      margin-bottom: 20px;
      width: 100%;