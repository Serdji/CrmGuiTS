select = 70px
contactId = 100px

mat-icon
  color: #696969;

.table

  &__form
    padding 1px 0;

    &-label
      margin-bottom: 15px;
      font-size: 18px;

    &-checkbox
      margin-right: 10px;
      margin-bottom: 15px;
      display: inline-block;

  &__row
    white-space: nowrap;

  &__cell
    text-overflow: ellipsis;
    display: inline-block;
    min-height auto;
    &._cp
      cursor: pointer
      padding: 16px;
      &:hover
        background: rgba(63,81,181,.12)

  &__input
    width: 100%;

  &__button

    &-wrapper
      display: flex;
      width: 100%;

  &__detail
    overflow: hidden;
    display: flex;
    width: 100%;
    border-top: 1px solid rgba(0, 0, 0, 0.12);

  &__segmentations
    padding: 0 101px 0 69px;
    width: 100%;

    &-child
      border-left: 1px solid rgba(0, 0, 0, 0.12);
      border-right: 1px solid rgba(0, 0, 0, 0.12);
      border-bottom: 1px solid rgba(0, 0, 0, 0.12);

      &:last-child
        border-bottom: none;

      mat-icon
        position: absolute;
        top: 12px;
        left: -25px;

.mat-list-base
  padding-top: 0;

.mat-column


  &-select
    width: select;

  &-title,
  &-isComplex
    flex: 1;

  &-segmentationId
    width: contactId;
    margin-left: auto;

    mat-icon
      cursor: pointer
      margin-left: auto
      margin-right: 30px;

  &-isComplex
    mat-icon
      cursor: pointer
      margin-left: 10px;
      width: 18px;
      height: 18px;
      font-size: 18px;

  &-expandedDetail
    padding 0
    width: 100%

mat-table
  display: table;
  width: 100%;

mat-header-cell,
mat-cell
  padding: 0 16px;
  width: auto
  flex: none;
  box-sizing: border-box;


.mat-table-sticky:first-child {
  border-right: 1px solid #e0e0e0;
}

.mat-table-sticky:last-child {
  border-left: 1px solid #e0e0e0;
}


.example-detail-row
  min-height: 0;

._active
  cursor: pointer;

._active:not(.example-expanded-row):hover {
  background: #f5f5f5;
}

._active:not(.example-expanded-row):active {
  background: #efefef;
}

.example-element-row {
  border-bottom-width: 0;
}

.mat-badge-content
  color: white !important;
  top: calc(50% - 22px / 2) !important;
  right: -70px !important;
  width auto !important;
  padding 0 8px;
  border-radius: 50px;
