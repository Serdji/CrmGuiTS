.table
  mat-icon
    cursor: pointer
    color: #696969;
    margin-left: auto

  &__row
    white-space: nowrap;

  &__cell
    text-overflow: ellipsis;
    display: inline-block;
    min-height auto;
    &._cp
      cursor: pointer
      padding: 16px;
      &:hover
        background: rgba(63,81,181,.12)

  &__button

    &-wrapper
      display: flex;
      width: 100%;

