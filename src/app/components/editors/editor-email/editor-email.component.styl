.editor-email
  width: 60vw;

  &__box
    position: absolute;
    top: 0;
    left: 5px;
    right: 5px;
    bottom: 0;

  &__input
    width: 100%;
    position: relative;

    &-icon
      position: absolute;
      right: 5px;
      cursor: pointer;
      color: rgba(0, 0, 0, 0.54);
      width: 16px;
      height: 16px;
      font-size 16px;

    &-informational
      color: #ff5722;

  &__button
    margin-top: 30px;
    margin-right: 15px;

    mat-icon
      margin-right: 10px;
